<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- 
            noupdate="1" berarti data ini hanya akan dibuat saat instalasi/upgrade modul.
            Perubahan manual pada cron job di UI Odoo tidak akan ter-override setiap kali
            server di-restart atau modul di-upgrade.
        -->
        <record id="cron_auto_create_student_invoices" model="ir.cron">
            <field name="name">Siswa: Generate Invoice Otomatis</field>
            <field name="model_id" ref="model_m_siswa"/>
            <field name="state">code</field>
            <field name="code">model._cron_auto_create_invoice()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">False</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
