<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Form View for SiswaKursusPenilaianSertifikat -->
        <record id="view_siswa_kursus_penilaian_sertifikat_form" model="ir.ui.view">
            <field name="name">siswa.kursus.penilaian.sertifikat.form</field>
            <field name="model">siswa.kursus.penilaian.sertifikat</field>
            <field name="arch" type="xml">
                <form string="Penilaian Sertifikat Kursus">
                    <header>
                        <button name="action_set_done" type="object" string="Selesai Penilaian" 
                                class="oe_highlight" 
                                confirm="Apakah Anda yakin ingin menyelesaikan penilaian ini? Status enrollment siswa akan diperbarui menjadi 'Lulus'."/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" icon="fa-calculator">
                                <field name="average_score" widget="statinfo" string="Rata-rata Skor" readonly="1"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="display_name" readonly="1"/>
                                <field name="enrollment_id" readonly="1"/>
                                <field name="siswa_id" readonly="1"/>
                                <field name="modul_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="total_score" readonly="1"/>
                                <field name="average_score" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Detail Poin Penilaian">
                                <field name="assessment_line_ids" >
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="penilaian_item_id" readonly="1"/>
                                        <field name="name" invisible="1"/>
                                        <field name="description" invisible="1"/>
                                        <field name="score"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View for SiswaKursusPenilaianSertifikat -->
        <record id="view_siswa_kursus_penilaian_sertifikat_tree" model="ir.ui.view">
            <field name="name">siswa.kursus.penilaian.sertifikat.tree</field>
            <field name="model">siswa.kursus.penilaian.sertifikat</field>
            <field name="arch" type="xml">
                <tree string="Penilaian Sertifikat Kursus">
                    <field name="display_name"/>
                    <field name="siswa_id"/>
                    <field name="modul_id"/>
                    <field name="average_score"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Action for SiswaKursusPenilaianSertifikat -->
        <record id="action_siswa_kursus_penilaian_sertifikat" model="ir.actions.act_window">
            <field name="name">Penilaian Sertifikat Kursus</field>
            <field name="res_model">siswa.kursus.penilaian.sertifikat</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>